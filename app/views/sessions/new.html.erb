<%=render "layouts/navbar"%>
<div class="text-center mt-4 font-select">
  <h1>Log in</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3 login-form">

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-group">
        <%= f.label :email, 'Email', class: "font-select"%>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password', class: "font-select" %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'Log in', class: 'btn btn-block font-select mt-4' %>
    <% end %>
    
    <p>新規登録は <%= link_to 'こちら', signup_path %>から</p>
  </div>
</div>